<h1>Contacts:</h1>

<%= link_to("Create a new contact", '/contacts/new') %>
<br>
<br>
<% @contacts.each do |contact| %>
  <h3>Name: <small><a href= <%= "/contacts/#{contact.id.to_i}" %>> <%= contact.first_name %> <%= contact.last_name %></p></a></small></h3>
  <h3>Email: <small><%= contact.email %></small></h3>
  <h3>Phone Number: <small><%= contact.phone_number %></small></h3>
  <br>
<% end %>

