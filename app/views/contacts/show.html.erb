<div class="panel panel-info">
  <div class="panel-body">
    <h2>Name: <small><%= @contact.full_name %></small></h2>
  </div>
<div class="panel-footer">
  <h3>Email:<small> <%= @contact.email %></small></h3>
  <h3>Phone Number: <small><%= @contact.phone_number %></small></h3>
  <br>
  <h6>Updated on <%= @contact.format_updated_at %></h6>
  <%= link_to("Delete this contact", "/contacts/#{@contact.id}", method: :delete) %><br>
  <%= link_to("Edit this contact", "/contacts/#{@contact.id}/edit") %><br>
  <%= link_to("Back to home", "/contacts") %>
</div>
